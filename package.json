{
  "name": "sutda-game",
  "version": "2.0.0",
  "private": true,
  "description": "멀티플레이어 섯다 게임 - Vue.js 3 + Convex",
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:convex": "npx convex dev",
    "dev": "concurrently \"npm run dev:convex\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "deploy:convex": "npx convex deploy",
    "deploy:frontend": "cd frontend && npx vercel --prod",
    "deploy": "npm run deploy:convex && npm run deploy:frontend",
    "install:all": "npm install && cd frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "convex": "^1.31.7"
  },
  "dependencies": {
    "convex-vue": "^0.0.5"
  }
}
